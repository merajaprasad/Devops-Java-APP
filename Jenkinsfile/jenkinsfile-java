pipeline {
    agent any

    environment {
        APP_NAME = "itc-fmcg"
        RELEASE = "1.0.0"
        DOCKER_USR = "merajaprasd"
        DOCKERHUB_CREDENTIALS = credentials('merajaprasd-dockerhub')
        IMAGE_TAG = "${RELEASE}-${BUILD_NUMBER}"
    }

    stages {
        stage("git checkout") {
            steps {
                checkout scm
            }
        }
        stage("Build") {
            steps {
                sh "mvn clean package"
            }
        }
        stage("Test") {
            steps {
                sh "mvn test"
                sh "ls /var/lib/jenkins/workspace/${JOB_NAME}/webapp/target/"
            }
        }
        stage("Build image") {
            steps{
                sh "docker build -t ${DOCKER_USR}/${APP_NAME}:${IMAGE_TAG} ."
            }
        }
        stage("push images") {
            steps {
                echo "DOCKER_USR: ${DOCKER_USR}"
                echo "APP_NAME: ${APP_NAME}"
                echo "BUILD_NUMBER: ${BUILD_NUMBER}"
                sh "docker images"
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | sudo docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                sh 'sudo docker push ${DOCKER_USR}/${APP_NAME}:${IMAGE_TAG}'
            }
        }

    }
}
